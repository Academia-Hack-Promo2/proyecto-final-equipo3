                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <%= image_tag("user.png")%>
                    </div>
                    <div class="pull-left info">
                        <p>Romer Ramos</p>
                        <!-- Status -->
                        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                    </div>
                </div>
                <!-- /.search form -->
                <!-- Sidebar Menu -->
                <ul class="sidebar-menu">
                    <li class="header">Menu</li>
                    <!-- Optionally, you can add icons to the links -->
                    <li><a href="home.html"><i class='fa fa-link'></i> <span>Home</span></a></li>
                    <li class="active">
                        <a href="#">
                            <i class='fa fa-link'></i>
                            <span>Clientes</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><%= link_to '<i class="fa fa-circle-o"></i> Clientes'.html_safe, clients_path %></li>
                            <li><%= link_to '<i class="fa fa-circle-o"></i> Registrar Clientes'.html_safe, new_client_path %></li>
                            <li><%= link_to '<i class="fa fa-circle-o"></i> Clientes Deshabilitados'.html_safe, clients_off_path %></li>
                        </ul>
                    </li>
                    <li>
                        <a href="#">
                            <i class='fa fa-link'></i>
                            <span>Proveedores</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="proveedores.html"><i class="fa fa-circle-o"></i> Registro de Proveedores</a></li>
                            <li><a href="proveedores_facturas.html"><i class="fa fa-circle-o"></i>Facturas de Proveedores</a></li>
                        </ul>
                    </li>
                    <li><a href="servicios.html"><i class='fa fa-link'></i> <span>Servicios</span></a></li>
                    <li>
                        <a href="#">
                            <i class='fa fa-link'></i>
                            <span>Facturas</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="facturas.html"><i class="fa fa-circle-o"></i>Facturas Puntuales</a></li>
                            <li><a href="facturas_recurrentes.html"><i class="fa fa-circle-o"></i>Facturas Recurrentes</a></li>
                        </ul>
                    </li>
                    <li><a href="reportes.html"><i class='fa fa-link'></i> <span>Reporte</span></a></li>
                </ul>
                <!-- /.sidebar-menu -->
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header text-center">
                <h1>
                Nuevo Cliente<br>
                <small>Aqui podra registrar a un cliente</small>
                </h1>
            </section>
            <!-- Main content -->
            <section class="content">
                <!-- Your Page Content Here -->
                <%= semantic_form_for @client do |c| %>
                <form>
                    <br>
                    <div class="col-md-6">
                        <div class="form-group">
                            <%= c.input :name, :input_html => { :class => 'form-control'}, placeholder: 'John Galindez',:label => "Nombre:"%> 
                        </div>
                        <div class="form-group">
                            <%= c.input :alias, :input_html => { :class => 'form-control'}, placeholder: 'Empresas Solucion Estadistica',:label => "Alias:"%>
                        </div>
                        <div class="form-group">
                            <%= c.input :rif_ci, :input_html => { :class => 'form-control'}, placeholder: 'J-3453',:label => "RIF-CI:"%>
                        </div>
                        <div class="form-group">
                            <%= c.input :fiscal_address, :input_html => { :class => 'form-control'}, placeholder: '2',:label => "Direccion Fiscal:"%>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                             <%= c.input :comercial_address, :input_html => { :class => 'form-control'}, placeholder: '2',:label => "Direccion Comercial:"%>
                        </div>
                        <div class="form-group">
                            <%= c.input :phone, :input_html => { :class => 'form-control'}, placeholder: '0412-456-32-45',:label => "Telefono:"%>
                        </div>
                        <div class="form-group">
                            <%= c.input :email, :input_html => { :class => 'form-control'}, placeholder: 'galindezj2@gmail.com',:label => "Email:" %>
                        </div>
                        <div class="form-group">
                        <%= c.input :type_client, :input_html => { :class => 'form-control'},  :as => :select, :collection => ["Estudiante", "Sponsor", "Empresa"] %>
                        </div>
                         <div class="form-group">
                        <%= c.input :active, :input_html => { :class => 'form-control'},  :as => :select, :collection => ["Habilitado", "Deshabilitado"] %>
                        </div>
                    </div>
                        <div class="form-group text-center">
                        <%= c.submit 'Registrar Cliente', :class => 'btn btn-primary'%>
                        </div>
                </form>
                  <% end %>
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <div class="pull-right hidden-xs">
                Hack Invoice
            </div>
            <!-- Default to the left -->
            <strong>Copyright &copy; 2015 <a href="#">Academia Hack Company</a>.</strong> All rights reserved.
        </footer>
        <!-- /.control-sidebar -->
    </div>
</div>