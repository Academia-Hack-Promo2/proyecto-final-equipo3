<%= stylesheet_link_tag "mystyle" %>
      <header class="main-header">
        <nav class="navbar navbar-static-top">
            <div class="container">
                <div class="navbar-header">
                    <a href="#" class="navbar-brand"><b>Hack Invoice</b></a>
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li><%= link_to 'Iniciar sesion', new_user_session_path %></li>
                        <li><%= link_to 'Registrar', new_user_registration_path, class: 'active' %></li>
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container-fluid -->
        </nav>
    </header>

<h2 class="text-center">Olvido su contraseña?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<div class="container">
	  <%= devise_error_messages! %>
</div>

<div class="register-box">
	        <div class="register-logo">
        <%= image_tag("full-logo-aeb6cec9ca9eee43393c56f9d220e49c.png")%>
        </div>
        <div class="register-box-body ">
            <p class="password-box-msg text-center">Reestablecer Contraseña</p>
            <form action="../../index.html" method="post">
                <div class="form-group has-feedback">
                    <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control'%>
                      <%= content_tag(:i, "", :class => "form-control-feedback fa fa-envelope") %>
                </div>
                <div class="row">
                    <div class="col-xs-4 col-md-6 btn-center">
                        <%= f.submit "Enviar", class: 'btn btn-primary btn-block btn-flat' %>
                        <%= content_tag(:i, "", :class => 'form-control-feedback fa fa-paper-plane icon-out') %>
                    </div>
                    <!-- /.col -->
                </div>
            </form> 
        </div>
</div>
<% end %>